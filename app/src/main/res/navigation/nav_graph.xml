<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.yolharakatiqoidalari.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.yolharakatiqoidalari.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addSignFragment"
            app:destination="@id/addSignFragment" />
        <action
            android:id="@+id/action_homeFragment_to_rvragment"
            app:destination="@id/rvFragment" />
        <action
            android:id="@+id/action_homeFragment_to_oneFragment"
            app:destination="@id/oneFragment" />
    </fragment>
    <fragment
        android:id="@+id/addSignFragment"
        android:name="com.example.yolharakatiqoidalari.AddSignFragment"
        android:label="fragment_add_sign"
        tools:layout="@layout/fragment_add_sign" />
    <fragment
        android:id="@+id/rvFragment"
        android:name="com.example.yolharakatiqoidalari.RvFragment"
        android:label="fragment_rvragment"
        tools:layout="@layout/fragment_rvragment" >
        <action
            android:id="@+id/action_rvFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
        <action
            android:id="@+id/action_rvFragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.yolharakatiqoidalari.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" />
    <fragment
        android:id="@+id/oneFragment"
        android:name="com.example.yolharakatiqoidalari.OneFragment"
        android:label="fragment_one"
        tools:layout="@layout/fragment_one" />
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.yolharakatiqoidalari.EditFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_edit" />
    <fragment
        android:id="@+id/likeFragment"
        android:name="com.example.yolharakatiqoidalari.LikeFragment"
        android:label="fragment_leek"
        tools:layout="@layout/fragment_leek" />
</navigation>